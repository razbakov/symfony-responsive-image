<picture>
    {% for media, source in sources %}
        <source 
            media="{{ media }}"
            srcset="{{ this.getSrcset(source) }}"
            {% if source.sizes %}sizes="{{ source.sizes|join(', ') }}"{% endif %}
        />
    {% endfor %}
    <img
        src="{{ this.getUrl() }}"
        alt="{{ alt }}"
        width="{{ this.getWidth() }}"
        height="{{ this.getHeight() }}"
        {% if lazy %}loading="lazy"{% endif %}
        {% if priority %}fetchpriority="high"{% endif %}
        {% for attr, value in this.getAttributes() %}
            {{ attr }}="{{ value }}"
        {% endfor %}
    />
</picture> 