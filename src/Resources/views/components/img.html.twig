<img
    src="{{ this.getUrl() }}"
    srcset="{{ this.getSrcset() }}"
    {% if sizes %}sizes="{{ sizes|join(', ') }}"{% endif %}
    alt="{{ alt }}"
    width="{{ this.getWidth() }}"
    height="{{ this.getHeight() }}"
    {% if lazy %}loading="lazy"{% endif %}
    {% if priority %}fetchpriority="high"{% endif %}
    {% for attr, value in this.getAttributes() %}
        {{ attr }}="{{ value }}"
    {% endfor %}
/> 